{
  "name": "create-ts-starter",
  "version": "1.1.0",
  "description": "typescript opinionated starter",
  "repository": {
    "type": "git",
    "url": "https://github.com/saostad/node-typescript-starter.git"
  },
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "bin": "./setup.js",
  "scripts": {
    "format": "prettier --check \"src/**/*.ts\" --write",
    "lint": "eslint --ext \".ts,.js\" src --quiet",
    "ts-node": "ts-node src/app.ts",
    "commands": "npm run lint && npm run format && npm run ts-node",
    "monitor": "nodemon --watch src -e ts --exec \"npm run commands\"",
    "prepublish": "tsc",
    "start": "nodemon --watch src -e ts --exec \"npm run ts-node\"",
    "start:docker": "nodemon -L --watch src -e ts --exec \"npm run ts-node\"",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "node",
    "typescript",
    "boilerplate",
    "starter"
  ],
  "author": "",
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "1000"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "fast-node-logger": "^0.1.5"
  }
}
