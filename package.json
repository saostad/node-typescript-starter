{
  "name": "create-ts-starter",
  "version": "2.3.7",
  "description": "Typescript Opinionated Starter / Boilerplate for Node.js projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/saostad/node-typescript-starter.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "bin/setup",
  "scripts": {
    "format": "prettier --check \"src/**/*.ts\" --write",
    "lint": "eslint --ext \".ts,.js\" src --quiet",
    "test": "jest",
    "test:watch": "jest --watch",
    "gen-docs": "typedoc",
    "postgen-docs": "node ./config/github.js",
    "tag": "node ./config/tag.js",
    "gen-changelog": "auto-changelog --hide-credit && git add CHANGELOG.md && git commit -m \"doc: change log\"",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "prepublishOnly": "npm-run-all -s tsc gen-docs",
    "postpublish": "npm-run-all -s tag gen-changelog",
    "prod": "node --unhandled-rejections=strict dist/index.js",
    "inspect": "node --inspect --unhandled-rejections=strict dist/index.js",
    "dev": "nodemon --watch dist --exec \"npm run inspect\"",
    "start": "npm-run-all -p tsc:watch dev"
  },
  "keywords": [
    "node",
    "typescript",
    "boilerplate",
    "starter"
  ],
  "author": "Saeid Ostad",
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "1000"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "auto-changelog": "^2.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "fast-node-logger": "^1.4.2"
  }
}
